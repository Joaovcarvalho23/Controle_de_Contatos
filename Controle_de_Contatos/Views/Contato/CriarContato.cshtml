@model ContatoModel
@{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar um novo contato</h1>
</div>

<form asp-controller="Contato" asp-action="CriarContato" method="post">

    <div class="form-group">
        <label for="nome">Nome do usuário</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
    </div><br />

    <div class="form-group">
        <label for="email">Email do usuário</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do contato">
    </div><br />

    <div class="form-group">
        <label for="celular">Celular do usuário</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular do contato">
    </div><br />
   
    <button type="submit" class="btn btn-success col-12">Adicionar</button><p></p>
    <a class="btn btn-secondary col-12" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>