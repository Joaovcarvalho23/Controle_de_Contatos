@using Controle_de_Contatos.Enums;
@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">
    <h1 class="display-4">Editar usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="EditarUsuario" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(o => o.Name)
    </div><br />

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do usuário">
        @Html.ValidationMessageFor(o => o.Email)
    </div><br />

    <div class="form-group">
        <label for="celular">login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do usuário">
        @Html.ValidationMessageFor(o => o.Login)
    </div><br />

    <div class="form-group">
        <label for="nome" class="form-label">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
    </div><br />
   
    <button type="submit" class="btn btn-success col-12">Editar</button><p></p>
    <a class="btn btn-secondary col-12" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>