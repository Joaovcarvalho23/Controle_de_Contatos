@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação excluir usuário";
}

<div class="text-center">
   <h3>Realmente deseja excluir o usuário '@Model.Name'?</h3>
</div>

<a class="btn btn-primary col-12" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a><p></p>
<a class="btn btn-danger col-12" role="button" asp-controller="Usuario" asp-action="ExcluirUsuario" asp-route-id="@Model.Id">Confirmar</a>