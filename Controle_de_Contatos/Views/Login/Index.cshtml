@model LoginModel

@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemFalha"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["MensagemFalha"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">

    <h2 class="text-center">Bem-vindo(a) ao nosso controle de contatos!</h2>

    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(o => o.Login)
    </div>

    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        @Html.ValidationMessageFor(o => o.Senha)
    </div>

    <p class="mb-4 text-sm-center mx-auto"> 
        Esqueceu sua senha?
        <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary">Redefinir senha</a>
    </p>

    <p class="mb-4 text-sm-center mx-auto">
        Novo por aqui? Cadastre-se agora clicando
        <a asp-action="CriarNovoUsuario" asp-controller="Login" class="text-primary">aqui!</a>
    </p>

    <button type="submit" class="btn btn-primary col-12">Entrar</button>
</form>